<div class="container mt-5">
  <h1 class="mb-4">Task List</h1>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date.strftime("%b %d, %Y") %></td>
          <td>
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Task", new_task_path, class: "btn btn-primary mt-3" %>
</div>
