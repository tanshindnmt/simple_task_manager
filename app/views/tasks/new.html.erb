<% content_for :title, "New task" %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Sign In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "font-weight-bold" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "font-weight-bold" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Sign in", class: "btn btn-primary w-100 mt-3" %>
  <% end %>

  <p class="text-center mt-3">
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-link" %>
  </p>
</div>

